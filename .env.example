# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/granaiadb
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/granaiadb

# PostgreSQL Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=granaiadb
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Application
APP_NAME="Grana IA API"
APP_VERSION="1.0.0"
DEBUG=True
API_PREFIX=/api/v1

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
